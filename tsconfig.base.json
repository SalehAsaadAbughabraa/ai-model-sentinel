{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM"],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@ai-model-sentinel/core": ["packages/core/src"],
      "@ai-model-sentinel/shared": ["packages/shared/src"],
      "@ai-model-sentinel/cli": ["packages/cli/src"],
      "@ai-model-sentinel/web-dashboard": ["packages/web-dashboard/src"]
    }
  },
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/__tests__/*"]
}