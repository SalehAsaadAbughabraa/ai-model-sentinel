# AI Model Sentinel v2.0.0 - Advanced Environment Configuration

# ========================
# üéØ Environment & Deployment
# ========================
DEBUG=false
ENVIRONMENT=production  # production, staging, development
DEPLOYMENT_REGION=us-east-1
API_VERSION=2.0.0
INSTANCE_ID=sentinel-prod-001

# ========================
# üîê Security & Encryption
# ========================
# JWT Configuration
SECRET_KEY=your-64-character-super-secure-key-change-in-production-12345
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
JWT_REFRESH_EXPIRATION_DAYS=30

# Encryption Keys (32 characters for AES-256)
ENCRYPTION_KEY=your-32-char-encryption-key-for-aes-256-123
DATA_ENCRYPTION_KEY=backup-32-char-encryption-key-for-data-456

# HTTPS & SSL Configuration
ENABLE_HTTPS=true
SSL_CERT_PATH=/etc/ssl/certs/sentinel.crt
SSL_KEY_PATH=/etc/ssl/private/sentinel.key
SSL_CA_PATH=/etc/ssl/certs/ca-bundle.crt

# Security Headers
ENABLE_CSP=true
ENABLE_HSTS=true
CORS_ORIGINS=["https://sentinel.example.com", "https://app.sentinel.com"]

# ========================
# üóÑÔ∏è Database Configuration
# ========================
# PostgreSQL - Primary Database
DATABASE_URL=postgresql://sentinel_user:${DB_PASSWORD}@localhost:5432/ai_sentinel_prod
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_RECYCLE=3600
DB_ECHO=false

# Redis - Caching & Sessions
REDIS_URL=redis://localhost:6379
REDIS_DB_CACHE=0
REDIS_DB_SESSIONS=1
REDIS_DB_QUEUE=2
REDIS_PASSWORD=${REDIS_PASSWORD}
CACHE_DEFAULT_TTL=3600  # 1 hour
SESSION_TIMEOUT=7200    # 2 hours

# ========================
# ‚òÅÔ∏è Multi-Cloud Storage
# ========================
# Storage Provider (aws, azure, gcp, backblaze)
STORAGE_PROVIDER=aws

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_REGION=us-east-1
S3_BUCKET=ai-sentinel-backups-prod
S3_ENDPOINT_URL=  # Leave empty for default AWS

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=${AZURE_STORAGE_CONNECTION_STRING}
AZURE_CONTAINER=ai-sentinel-backups

# Google Cloud Storage
GCS_PROJECT_ID=sentinel-project
GCS_BUCKET=ai-sentinel-backups
GCS_CREDENTIALS_PATH=/etc/sentinel/gcp-credentials.json

# Backblaze B2 Configuration
B2_ACCOUNT_ID=${B2_ACCOUNT_ID}
B2_APPLICATION_KEY=${B2_APPLICATION_KEY}
B2_BUCKET=ai-sentinel-backups
B2_ENDPOINT=s3.us-east-005.backblazeb2.com

# ========================
# üìä Analytics & Data Warehouses
# ========================
# Snowflake Configuration
SNOWFLAKE_ACCOUNT=your-account
SNOWFLAKE_USER=sentinel_analytics
SNOWFLAKE_PASSWORD=${SNOWFLAKE_PASSWORD}
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_DATABASE=AI_SENTINEL
SNOWFLAKE_SCHEMA=ANALYTICS
SNOWFLAKE_ROLE=ANALYTICS_ROLE

# Google BigQuery
BIGQUERY_PROJECT_ID=sentinel-analytics
BIGQUERY_DATASET=production
BIGQUERY_CREDENTIALS_PATH=/etc/sentinel/bigquery-credentials.json

# ========================
# üîÑ Background Tasks & Queueing
# ========================
# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]

# Task Specific Settings
SCAN_TASK_TIMEOUT=1800  # 30 minutes
REPORT_TASK_TIMEOUT=600  # 10 minutes
ANALYTICS_TASK_TIMEOUT=3600  # 1 hour

# ========================
# üì° Monitoring & Observability
# ========================
# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FORMAT=json
LOG_FILE=/var/log/sentinel/app.log
ENABLE_ACCESS_LOGS=true

# OpenTelemetry Configuration
ENABLE_OPENTELEMETRY=true
OTLP_ENDPOINT=http://localhost:4318
OTLP_SERVICE_NAME=ai-sentinel-api
OTLP_SERVICE_VERSION=2.0.0

# Prometheus Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Sentry Error Tracking
SENTRY_DSN=${SENTRY_DSN}
SENTRY_ENVIRONMENT=production

# ========================
# üåê API & Rate Limiting
# ========================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_WORKER_CLASS=uvicorn.workers.UvicornWorker

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds
RATE_LIMIT_STRATEGY=fixed-window

# API Throttling
THROTTLE_AUTH_REQUESTS=5  # login attempts per minute
THROTTLE_SCAN_REQUESTS=10  # scans per minute per user
THROTTLE_API_REQUESTS=1000  # general API requests per minute

# ========================
# üîê Authentication & Identity
# ========================
# OAuth2 Providers
ENABLE_OAUTH2=true
OAUTH2_GOOGLE_CLIENT_ID=${GOOGLE_OAUTH_CLIENT_ID}
OAUTH2_GOOGLE_CLIENT_SECRET=${GOOGLE_OAUTH_SECRET}
OAUTH2_MICROSOFT_CLIENT_ID=${MS_OAUTH_CLIENT_ID}
OAUTH2_MICROSOFT_CLIENT_SECRET=${MS_OAUTH_SECRET}

# LDAP/Active Directory
LDAP_ENABLED=false
LDAP_SERVER=ldap://company-dc.example.com
LDAP_BASE_DN=DC=example,DC=com
LDAP_USER_DN=CN=Users,DC=example,DC=com

# ========================
# üìß Email & Notifications
# ========================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=${SMTP_USERNAME}
SMTP_PASSWORD=${SMTP_PASSWORD}
SMTP_USE_TLS=true

NOTIFICATION_FROM_EMAIL=sentinel@example.com
NOTIFICATION_ADMIN_EMAIL=admin@example.com

# ========================
# üõ°Ô∏è Threat Intelligence
# ========================
THREAT_INTELLIGENCE_ENABLED=true
THREAT_API_KEY=${THREAT_API_KEY}
THREAT_UPDATE_INTERVAL=3600  # 1 hour

# ========================
# üìã Compliance & Auditing
# ========================
AUDIT_LOG_ENABLED=true
AUDIT_RETENTION_DAYS=365
COMPLIANCE_FRAMEWORKS=GDPR,HIPAA,ISO27001,SOC2

# ========================
# üîß Performance & Optimization
# ========================
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6
ENABLE_CACHING=true
CACHE_TIMEOUT=300  # 5 minutes

# Database Query Optimization
DB_QUERY_TIMEOUT=30
DB_STATEMENT_TIMEOUT=60

# ========================
# üöÄ Feature Flags
# ========================
FEATURE_AI_INSIGHTS=true
FEATURE_REAL_TIME_ALERTS=true
FEATURE_AUTOMATED_REPORTS=true
FEATURE_MULTI_TENANT=true
FEATURE_ADVANCED_ANALYTICS=true

# ========================
# üîÑ Backup & Disaster Recovery
# ========================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # 2 AM daily
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION=true

# ========================
# üåç Regional Settings
# ========================
DEFAULT_TIMEZONE=UTC
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ar,fr,es,de
DATE_FORMAT=YYYY-MM-DD
TIME_FORMAT=HH24:MI:SS

# ========================
# üîç Search & Indexing
# ========================
ELASTICSEARCH_ENABLED=false
ELASTICSEARCH_HOSTS=http://localhost:9200
ELASTICSEARCH_INDEX=sentinel-logs