# Development Environment
ENV=development
DEBUG=true
LOG_LEVEL=DEBUG
LOG_FORMAT=console

# Development Database
DATABASE_URL=sqlite:///./ai_sentinel_dev.db

# Development Security (Never use in production!)
ENCRYPTION_KEY=base64:dev-encryption-key-for-testing-only
JWT_SECRET=dev-jwt-secret-change-in-production

# Development Features
ENABLE_GPU=false
FEATURE_CACHE_DIR=./cache
MAX_FILE_SIZE_MB=100

# Development API
API_PORT=8000
API_WORKERS=2

# External Services (Mock/Disabled)
VAULT_ENABLED=false
SENTRY_DSN=
CLOUD_STORAGE_ENABLED=false